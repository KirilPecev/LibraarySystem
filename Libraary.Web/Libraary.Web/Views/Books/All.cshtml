@model Libraary.Web.Models.Books.BookViewModel[]
@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Picture</th>
            <th scope="col">Name</th>
            <th scope="col">Author</th>
            <th scope="col">Publisher</th>
            <th scope="col">Rating</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Length; i++)
        {
            <tr>
                <th>
                    <img src="@Model[i].Picture" width="80" height="80" />
                </th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Authors</td>
                <td>@Model[i].Publisher</td>
                <td>@Model[i].Rating</td>
                <td>
                    <a asp-controller="Books"
                       asp-action="Details"
                       asp-route-bookId="@Model[i].Id"
                       class="btn btn-outline-info"
                       role="button">
                        Details
                    </a>
                    @if (User.IsInRole("Librarian"))
                    {
                        <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#exampleModal">
                            Remove
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Do you really want to delete this book?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No, Close</button>
                                        <a asp-controller="Books"
                                           asp-action="Remove"
                                           asp-route-bookId="@Model[i].Id"
                                           class="btn btn-outline-warning"
                                           role="button">
                                            Yes, Remove
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="Books"
                           asp-action="Edit"
                           asp-route-bookId="@Model[i].Id"
                           class="btn btn-outline-info"
                           role="button">
                            Edit
                        </a>
                    }
                    @if (User.IsInRole("Librarian") && Model[i].IsRented)
                    {
                        <a asp-controller="Books"
                           asp-action="ReturnBook"
                           asp-route-bookId="@Model[i].Id"
                           class="btn btn-outline-info"
                           role="button">
                            Return
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>