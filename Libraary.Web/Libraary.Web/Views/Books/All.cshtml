@model Libraary.Web.Models.Books.BookViewModel[]
@{
    ViewData["Title"] = "All Books";
}

<div class="container-fluid" style="position: relative; top:75px">
    <form class="form-inline" method="post" asp-controller="Books" , asp-action="SearchedBooks">
        <input class="form-control mr-sm-2 " style="width:88.5%" type="search" placeholder="Search" aria-label="Search" name="search" />
        <button class="btn btn-outline-success my-2 my-sm-0" style="position: center" type="submit">Search</button>
    </form>
</div>
<div class="books" style="position: relative; top: 50px">
    @for (var i = 0; i < Model.Length; i++)
    {
        <div class="bookContainer grow">
            <a asp-controller="Books"
               asp-action="Details"
               asp-route-bookId="@Model[i].Id"
               target="_blank">
                <img src="@Model[i].Picture" width="350" height="495" />
                <br />
                @Model[i].Name
            </a>
        </div>
    }
</div>