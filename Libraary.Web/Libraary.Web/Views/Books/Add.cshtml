@model Libraary.Web.Models.Books.BookInputModel
@inject Libraary.Services.ICategoryService  CategoryService
@inject Libraary.Services.IAuthorService  AuthorService
@inject Libraary.Services.IPublisherService  PublisherService
@{
    ViewData["Title"] = "Add Book";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload picture:</p>
            <input asp-for="Picture">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Book name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary">
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <fieldset>
        <legend>Choose author</legend>
        @foreach (var item in AuthorService.GetAllAuthorsName())
        {
            <div>
                <input type="checkbox" asp-for="Author" value="@item" checked>
                <label asp-for="@item">@item</label>
            </div>
        }
    </fieldset>
    <fieldset>
        <legend>Choose publisher</legend>
        @foreach (var item in PublisherService.GetAllPublishersName())
        {
            <div>
                <input type="checkbox" asp-for="Publisher" value="@item">
                <label asp-for="@item">@item</label>
            </div>
        }
    </fieldset>
    <fieldset>
        <legend>Choose categories</legend>
        @foreach (var item in CategoryService.GetCategories())
        {
            <div>
                <input type="checkbox" asp-for="Categories" value="@item">
                <label asp-for="@item">@item</label>
            </div>
        }
    </fieldset>
    <div>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}