@model Libraary.Web.Models.Publishers.PublisherBindingModel
@{
    ViewData["Title"] = "Add Publisher";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="URLAddress"></label>
        <input asp-for="URLAddress" class="form-control" placeholder="URL address">
        <span asp-validation-for="URLAddress" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}