@model Libraary.Web.Models.Publishers.PublisherViewModel[]
@{
    ViewData["Title"] = "All Publishers";
}

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">URL</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Length; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].URL</td>
            </tr>
        }
    </tbody>
</table>