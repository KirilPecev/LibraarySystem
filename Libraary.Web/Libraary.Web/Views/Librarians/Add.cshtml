@model Libraary.Web.Models.Librarians.LibrarianBindingModel
@{
    ViewData["Title"] = "Add Librarian";
}

<form method="post">
    <div class="form-group">
        <label asp-for="LibraryId"></label>
        <input asp-for="LibraryId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Add owner</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    confirm("Your librarian has to be registered!");
    </script>
}