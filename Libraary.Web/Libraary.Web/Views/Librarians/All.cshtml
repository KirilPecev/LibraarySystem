@model Libraary.Web.Models.Librarians.LibrarianDetailsViewModel[]
@{
    ViewData["Title"] = "All Librarians";
}

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Length; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].FullName</td>
                <td>@Model[i].Address</td>
            </tr>
        }
    </tbody>
</table>