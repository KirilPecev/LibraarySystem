@model Libraary.Web.Models.Books.BookViewModel[]
@{
    ViewData["Title"] = "Home Page";
}

<<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Publisher</th>
            <th scope="col">Rating</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.Length; i++)
        {
            <tr>
                <th scope="row"> <img src="~/Pictures/@Model[i].Picture" width="80" height="80" /></th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Publisher</td>
                <td>@Model[i].Rating</td>
                <td>
                    <a asp-controller="Books"
                       asp-action="Details"
                       asp-route-bookId="@Model[i].Id"
                       class="btn btn-outline-info"
                       role="button">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

