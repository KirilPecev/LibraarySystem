@model Libraary.Web.Models.Authors.AuthorBindingModel
@{
    ViewData["Title"] = "Add Author";
}

<div class="card-body">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card register">
            <h5 class="card-title text-center">Author</h5>
            <form method="post" class="form-signin">
                <div class="form-label-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First name">
                    <label asp-for="FirstName"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <label asp-for="LastName"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-label-group">
                    <input asp-for="Nationality" class="form-control" placeholder="Country">
                    <label asp-for="Nationality"></label>
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Add author</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}