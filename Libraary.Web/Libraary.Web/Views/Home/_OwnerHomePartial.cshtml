@model Libraary.Web.Models.Libraries.LibraryDetailsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<main class="mt-3">
    <h1 class="text-center">Welcome to @Model.Name</h1>
    <hr class="hr-2">
    <div class="mx-auto">
        <div class="address-and-date-holder d-flex justify-content-around">
            <div class="d-flex flex-column">
                <h2 class="text-center">Address</h2>
                <h3 class="text-center mt-1">@Model.Address</h3>
            </div>
            <div class="d-flex flex-column">
                <h2 class="text-center">Phone</h2>
                <h3 class="text-center mt-1">@Model.PhoneNumber</h3>
            </div>
        </div>
        <hr class="hr-2">
        <div class="w-75 mx-auto weight-and-recipient-holder d-flex justify-content-between">
            <div class="d-flex flex-column w-50">
                <h2 class="text-center">Books count</h2>
                <h3 class="text-center mt-1">@Model.BooksCount</h3>
            </div>
            <div class="d-flex flex-column w-50">
                <h2 class="text-center">Count of rented books</h2>
                <h3 class="text-center mt-1">@Model.RentedBooksCount</h3>
            </div>
        </div>
        <hr class="hr-2">
        <div class="w-75 mx-auto weight-and-recipient-holder d-flex justify-content-between">
            <div class="d-flex flex-column w-100">
                <h2 class="text-center">Profit</h2>
                <h3 class="text-center mt-1">@Model.Profit</h3>
            </div>
        </div>
    </div>
</main>

