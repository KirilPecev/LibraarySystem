@model Libraary.Web.Areas.Admin.Models.IndexViewModel
@using Libraary.Web.Extensions
@{
    ViewData["Title"] = "Home Page";
}

<main class="mt-3">
    <h1 class="text-center">Hi, Administrator @this.User.Identity.GetFirstName()</h1>
    <hr class="">
    <h2 class="text-center">Statistic about your system</h2>
    <hr class="" />
    <div class="w-100 mx-auto d-flex justify-content-between">
        <div class="d-flex flex-column w-50">
            <h2 class="text-center">Users count</h2>
            <h3 class="text-center mt-1">@Model.UsersCount</h3>
        </div>
        <div class="d-flex flex-column w-50">
            <h2 class="text-center">Libraries count</h2>
            <h3 class="text-center mt-1">@Model.LibrariesCount</h3>
        </div>
        <div class="d-flex flex-column w-50">
            <h2 class="text-center">Books count</h2>
            <h3 class="text-center mt-1">@Model.BooksCountForAllLibraries</h3>
        </div>
    </div>
</main>
